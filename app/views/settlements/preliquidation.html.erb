<div class="max-w-7xl mx-auto px-3 sm:px-4 mt-4">
  <div class="mb-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-6 gap-3">
      <div>
        <h1 class="text-xl sm:text-2xl font-extrabold text-purple-900">üìä Preliquidaci√≥n - <%= @month_name %> <%= @current_year %></h1>
        <p class="text-xs sm:text-sm text-gray-600 mt-1">
          Vista previa de la liquidaci√≥n del mes actual
        </p>
      </div>

      <%= link_to "Volver a Liquidaciones", settlements_path, class: "w-full sm:w-auto inline-flex items-center justify-center gap-2 px-4 py-2 bg-gray-600 text-white text-sm font-semibold rounded hover:bg-gray-700 transition-colors duration-200 shadow-sm" %>
    </div>

    <!-- Resumen de Totales -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
      <div class="bg-green-50 border-2 border-green-200 rounded-lg p-6">
        <h3 class="text-sm font-medium text-green-800 mb-2">Total Proyectos Terminados</h3>
        <p class="text-3xl font-bold text-green-600">
          <%= number_to_currency(@total_projects_value, unit: "$", delimiter: ".", separator: ",", precision: 0) %>
        </p>
        <p class="text-xs text-green-600 mt-1"><%= @projects.count %> <%= @projects.count == 1 ? 'proyecto' : 'proyectos' %></p>
      </div>

      <div class="bg-red-50 border-2 border-red-200 rounded-lg p-6">
        <h3 class="text-sm font-medium text-red-800 mb-2">Total Gastos del Mes</h3>
        <p class="text-3xl font-bold text-red-600">
          <%= number_to_currency(@total_expenses_value, unit: "$", delimiter: ".", separator: ",", precision: 0) %>
        </p>
        <p class="text-xs text-red-600 mt-1"><%= @expenses.count %> <%= @expenses.count == 1 ? 'gasto' : 'gastos' %></p>
      </div>

      <div class="<%= @difference >= 0 ? 'bg-blue-50 border-2 border-blue-200' : 'bg-orange-50 border-2 border-orange-200' %> rounded-lg p-6">
        <h3 class="text-sm font-medium <%= @difference >= 0 ? 'text-blue-800' : 'text-orange-800' %> mb-2">Diferencia</h3>
        <p class="text-3xl font-bold <%= @difference >= 0 ? 'text-blue-600' : 'text-orange-600' %>">
          <%= number_to_currency(@difference, unit: "$", delimiter: ".", separator: ",", precision: 0) %>
        </p>
        <p class="text-xs <%= @difference >= 0 ? 'text-blue-600' : 'text-orange-600' %> mt-1">
          <%= @difference >= 0 ? 'Super√°vit' : 'D√©ficit' %>
        </p>
      </div>
    </div>

    <!-- Proyectos Terminados -->
    <div class="mb-6">
      <h2 class="text-lg font-bold text-gray-800 mb-4">üèóÔ∏è Proyectos Terminados en <%= @month_name %></h2>
      <% if @projects.any? %>
        <div class="bg-white rounded-lg shadow overflow-hidden">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Proyecto</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Fecha Liquidaci√≥n</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Valor Cotizado</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @projects.each do |project| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 text-sm font-medium text-gray-900"><%= project.name %></td>
                  <td class="px-6 py-4 text-sm text-gray-500"><%= project.project_identifier %></td>
                  <td class="px-6 py-4 text-sm text-gray-500">
                    <%= project.settlement_date.strftime("%d/%m/%Y") if project.settlement_date %>
                  </td>
                  <td class="px-6 py-4 text-sm text-right font-semibold text-green-600">
                    <%= number_to_currency(project.quoted_value, unit: "$", delimiter: ".", separator: ",", precision: 0) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot class="bg-gray-50">
              <tr>
                <td colspan="3" class="px-6 py-4 text-sm font-bold text-gray-900">Total</td>
                <td class="px-6 py-4 text-sm text-right font-bold text-green-600">
                  <%= number_to_currency(@total_projects_value, unit: "$", delimiter: ".", separator: ",", precision: 0) %>
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
      <% else %>
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 text-center">
          <p class="text-gray-600">No hay proyectos terminados en <%= @month_name %></p>
        </div>
      <% end %>
    </div>

    <!-- Gastos del Mes -->
    <div class="mb-6">
      <h2 class="text-lg font-bold text-gray-800 mb-4">üí∏ Gastos de <%= @month_name %></h2>
      <% if @expenses.any? %>
        <div class="bg-white rounded-lg shadow overflow-hidden">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Proyecto</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Descripci√≥n</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tipo</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Fecha</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Monto</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @expenses.each do |expense| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 text-sm text-gray-900"><%= expense.project.name %></td>
                  <td class="px-6 py-4 text-sm text-gray-500"><%= expense.description.truncate(50) %></td>
                  <td class="px-6 py-4 text-sm text-gray-500">
                    <%= t("enums.expense.expense_type.#{expense.expense_type}") %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500">
                    <%= expense.expense_date.strftime("%d/%m/%Y") %>
                  </td>
                  <td class="px-6 py-4 text-sm text-right font-semibold text-red-600">
                    <%= number_to_currency(expense.amount, unit: "$", delimiter: ".", separator: ",", precision: 0) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot class="bg-gray-50">
              <tr>
                <td colspan="4" class="px-6 py-4 text-sm font-bold text-gray-900">Total</td>
                <td class="px-6 py-4 text-sm text-right font-bold text-red-600">
                  <%= number_to_currency(@total_expenses_value, unit: "$", delimiter: ".", separator: ",", precision: 0) %>
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
      <% else %>
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 text-center">
          <p class="text-gray-600">No hay gastos registrados en <%= @month_name %></p>
        </div>
      <% end %>
    </div>

    <!-- Nota informativa -->
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-yellow-700">
            <strong>Nota:</strong> Esta es una preliquidaci√≥n. Los datos mostrados corresponden a proyectos en estado "Terminado" y gastos en estado "Pendiente" del mes actual. Para crear la liquidaci√≥n oficial, ve a "Nueva Liquidaci√≥n".
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
