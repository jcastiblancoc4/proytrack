<div class="max-w-md mx-auto mt-20 px-6 py-8 bg-white rounded-xl shadow-lg border border-gray-200">
<!-- Título de la aplicación -->
    <div class="mb-6 text-center">
      <h1 class="text-3xl font-extrabold text-blue-800 mb-2">ProyTrack</h1>
      <p class="text-gray-600 text-sm">Gestión de proyectos y control de gastos</p>
    </div>

    <!-- Título del formulario -->
    <h2 class="text-xl font-semibold text-center text-gray-800 mb-6">Iniciar Sesión</h2>

    <%= form_with(scope: :user, url: session_path(:user), class: "space-y-5") do |f| %>
      <!-- Email -->
      <div>
        <%= f.label :email, "Correo electrónico", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, required: true,
                          class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <!-- Password -->
      <div>
        <%= f.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", required: true,
                             class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <!-- Recordarme -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded" %>
          <%= f.label :remember_me, "Recordarme", class: "ml-2 block text-sm text-gray-900" %>
        </div>
      <% end %>

      <!-- Botón Iniciar sesión -->
      <div>
        <%= f.submit "Iniciar Sesión",
                     class: "w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition" %>
      </div>
    <% end %>

    <!-- Enlaces inferiores -->
    <div class="mt-6 text-center space-y-2">
      <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "text-sm text-blue-600 hover:underline" %><br>
      <%= link_to "¿No tienes cuenta? Registrarse", new_registration_path(resource_name), class: "text-sm text-blue-600 hover:underline" %>
    </div>

</div>
