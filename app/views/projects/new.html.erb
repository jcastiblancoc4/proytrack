<div class="max-w-4xl mx-auto mt-16 grid grid-cols-1 md:grid-cols-3 gap-8 px-4">
  <!-- Secci√≥n de encabezado / resumen -->
  <div class="md:col-span-1 bg-blue-50 border border-blue-200 rounded-xl p-4 shadow-sm">
    <h2 class="text-lg font-semibold text-blue-800 mb-2 flex items-center gap-2">
      üÜï Crear Nuevo Proyecto
    </h2>
    <p class="text-sm text-gray-700 leading-relaxed">
      Diligencia los datos b√°sicos del proyecto. Estos podr√°n editarse m√°s adelante si es necesario.
    </p>
  </div>

  <!-- Formulario -->
  <div class="md:col-span-2 bg-white border border-blue-100 rounded-xl p-6 shadow-md">
    <h1 class="text-2xl font-bold text-blue-800 flex items-center gap-2 mb-8 bg-blue-50 px-4 py-3 rounded border border-blue-200">
      ‚úèÔ∏è Nuevo Proyecto
    </h1>

    <% if @project.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              Se encontraron <%= pluralize(@project.errors.count, "error") %>:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% @project.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= form_with model: @project, local: true, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :name, "üìå Nombre del Proyecto", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2 focus:ring focus:ring-blue-200" %>
      </div>

      <div>
        <%= f.label :project_identifier, "üÜî Identificador del Proyecto", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :project_identifier, 
                         placeholder: "Ej: PROY-2024-001, ABC-123, etc.",
                         class: "w-full border border-gray-300 rounded px-3 py-2 focus:ring focus:ring-blue-200" %>
        <p class="text-xs text-gray-500 mt-1">Identificador √∫nico que identifica este proyecto</p>
      </div>

      <div>
        <%= f.label :purchase_order, "üßæ Orden de Compra", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :purchase_order, class: "w-full border border-gray-300 rounded px-3 py-2" %>
      </div>

      <div>
        <%= f.label :quoted_value, "üí∞ Valor Cotizado", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :quoted_value,
                         value: '',
                         class: "w-full border border-gray-300 rounded px-3 py-2",
                         id: "quoted_value_input",
                         autocomplete: "off" %>
      </div>

      <div>
        <%= f.label :locality, "üìç Localidad", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :locality, class: "w-full border border-gray-300 rounded px-3 py-2" %>
      </div>

      <div class="flex justify-between items-center pt-6">
        <%= link_to "Cancelar", root_path, class: "text-gray-600 hover:underline" %>
        <%= f.submit "Guardar Proyecto", 
            class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed",
            id: "submit-btn",
            onclick: "return validateForm();" %>
      </div>
    <% end %>
  </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const input = document.getElementById("quoted_value_input");

        if (input) {
            input.addEventListener("input", function () {
                const cleanValue = input.value.replace(/\D/g, "");
                input.value = cleanValue.replace(/\B(?=(\d{3})+(?!\d))/g, ".");
            });

            input.form.addEventListener("submit", function () {
                input.value = input.value.replace(/\./g, "");
            });
        }
    });

    function validateForm() {
        const name = document.querySelector('input[name="project[name]"]').value.trim();
        const projectIdentifier = document.querySelector('input[name="project[project_identifier]"]').value.trim();
        const purchaseOrder = document.querySelector('input[name="project[purchase_order]"]').value.trim();
        const quotedValue = document.querySelector('input[name="project[quoted_value]"]').value.trim();
        const locality = document.querySelector('input[name="project[locality]"]').value.trim();
        
        let errors = [];
        
        if (!name) {
            errors.push("El nombre del proyecto es obligatorio");
        }
        
        if (!projectIdentifier) {
            errors.push("El identificador del proyecto es obligatorio");
        }
        
        if (!purchaseOrder) {
            errors.push("La orden de compra es obligatoria");
        }
        
        if (!quotedValue || quotedValue === "0") {
            errors.push("El valor cotizado es obligatorio y debe ser mayor a 0");
        }
        
        if (!locality) {
            errors.push("La localidad es obligatoria");
        }
        
        if (errors.length > 0) {
            alert("Por favor corrige los siguientes errores:\n\n" + errors.join("\n"));
            return false;
        }
        
        // Si no hay errores, mostrar el efecto de carga
        const submitBtn = document.getElementById("submit-btn");
        setTimeout(() => { 
            submitBtn.disabled = true; 
            submitBtn.value = '‚è≥ Guardando...'; 
            submitBtn.style.opacity = '0.6'; 
        }, 0);
        
        return true;
    }
</script>
