<div class="max-w-4xl mx-auto mt-4 p-6 bg-white border border-blue-100 rounded-xl shadow-md">
  <h1 class="text-2xl font-bold text-blue-800 flex items-center gap-2 mb-8 bg-blue-50 px-4 py-3 rounded border border-blue-200">
    ‚úèÔ∏è Editar Proyecto
  </h1>

  <% if @project.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            Se encontraron <%= pluralize(@project.errors.count, "error") %>:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @project.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%= form_with(model: @project, local: true, class: "space-y-6") do |f| %>
    <%= hidden_field_tag :from, params[:from] %>
    <div>
      <%= f.label :name, "üìå Nombre del Proyecto", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2 focus:ring focus:ring-blue-200" %>
    </div>


    <div>
      <%= f.label :purchase_order, "üßæ Orden de Compra", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :purchase_order, class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :quoted_value, "üí∞ Valor Cotizado", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :quoted_value,
                       value: number_with_delimiter(f.object.quoted_value.to_i, delimiter: "."),
                       class: "w-full border border-gray-300 rounded px-3 py-2",
                       id: "quoted_value_input",
                       autocomplete: "off" %>
    </div>

    <div>
      <%= f.label :locality, "üìç Localidad", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :locality, class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :payment_status, "üí≥ Estado de Pago", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :payment_status,
                   Project.payment_statuses.map { |key, _| [t("enums.project.payment_status.#{key}"), key] },
                   {},
                   class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :execution_status, "üöß Estado de Ejecuci√≥n", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :execution_status,
                   Project.execution_statuses.map { |key, _| [t("enums.project.execution_status.#{key}"), key] },
                   {},
                   class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div class="flex justify-between items-center mt-8">
      <%= f.submit "Guardar Cambios", 
          class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed",
          id: "submit-btn",
          onclick: "return validateForm();" %>
      <%= link_to "Cancelar", root_path, class: "text-gray-600 hover:underline" %>
    </div>
  <% end %>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const input = document.getElementById("quoted_value_input");

        if (input) {
            input.addEventListener("input", function () {
                const cleanValue = input.value.replace(/\D/g, ""); // solo n√∫meros
                input.value = cleanValue.replace(/\B(?=(\d{3})+(?!\d))/g, ".");
            });

            input.form.addEventListener("submit", function () {
                input.value = input.value.replace(/\./g, ""); // quita puntos al enviar
            });
        }
    });

    function validateForm() {
        const name = document.querySelector('input[name="project[name]"]').value.trim();
        const purchaseOrder = document.querySelector('input[name="project[purchase_order]"]').value.trim();
        const quotedValue = document.querySelector('input[name="project[quoted_value]"]').value.trim();
        const locality = document.querySelector('input[name="project[locality]"]').value.trim();
        const submitBtn = document.getElementById('submit-btn');

        // Validar campos obligatorios
        if (!name) {
            alert('El nombre del proyecto es obligatorio');
            return false;
        }


        if (!purchaseOrder) {
            alert('La orden de compra es obligatoria');
            return false;
        }

        if (!quotedValue || quotedValue === '0') {
            alert('El valor cotizado es obligatorio y debe ser mayor a 0');
            return false;
        }

        if (!locality) {
            alert('La localidad es obligatoria');
            return false;
        }

        // Si todo est√° bien, deshabilitar bot√≥n y mostrar efecto de carga
        setTimeout(() => {
            submitBtn.disabled = true;
            submitBtn.value = '‚è≥ Guardando...';
            submitBtn.style.opacity = '0.6';
        }, 0);

        return true;
    }
</script>
